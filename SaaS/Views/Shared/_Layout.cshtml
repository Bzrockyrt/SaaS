                            <i class='bx bxs-user-circle icon'></i>
                            Profile
                        </a>*@
                        <a asp-area="Application" asp-controller="Account" asp-action="Manage">
                            <i class='bx bxs-user-circle icon'></i>
                            Profil
                        </a>
                    </li>
                    <li>
                        <a href="#">
