                        @*<a asp-area="Application" asp-controller="Connection" asp-action="Logout">
                            <i class='bx bxs-log-out-circle'></i>
                            Logout
                        </a>*@
                    </li>
                </ul>
            </div>
        </nav>

        <!-- MAIN -->
        <main>
            <partial name="_Notification" />
            @RenderBody()
