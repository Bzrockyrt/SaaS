@model SaaS.Domain.ViewModels.LoginViewModel

@{
    Layout = null;
    ViewData["Title"] = "Connexion";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/Login.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,600,0,0" />
    <title>@ViewData["Title"]</title>
</head>

<body>
    <div class="login-card-container">
        <div class="login-card">
            <div class="login-card-logo">
                <img src="~/Logo_PIPL_Developpement.png" alt="PIPL Développement" />
            </div>
            <div class="login-card-header">
                <h1>Connexion</h1>
                <div>Veuillez vous connecter pour utiliser le logiciel</div>
            </div>
            <form id="account" method="post" class="login-card-form" asp-area="WebSite" asp-controller="HomePage" asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="login-card-validation" role="alert"></div>
                <div class="form-item">
                    <span class="form-item-icon material-symbols-rounded">code</span>
                    <input type="text" placeholder="Code d'entreprise" id="companyCodeForm"
                           autofocus required />
                </div>
                <div class="form-item">
                    <span class="form-item-icon material-symbols-rounded">mail</span>
                    <input type="email" asp-for="Email" placeholder="Email" autofocus required/>
                    @*<input type="text" placeholder="Adresse mail" id="emailForm"
                           autofocus required>*@
                </div>
                <div class="form-item">
                    <span class="form-item-icon material-symbols-rounded">lock</span>
                    <input type="password" asp-for="Password" placeholder="Mot de passe" required/>
                    @*<input type="password" placeholder="Mot de passe" id="passwordForm"
                           required>*@
                </div>
                <div class="form-item-other">
                    <div class="checkbox">
                        <input asp-for="RememberMe" type="checkbox" id="rememberMeCheckbox" checked>
                        <label for="rememberMeCheckbox">Se souvenir de moi</label>
                    </div>
                    <a asp-area="WebSite" asp-controller="HomePage" asp-action="ForgotPassword">J'ai oublié mon mot de passe!</a>
                </div>
                <button id="login-submit" type="submit">Se connecter</button>
            </form>
            <div class="login-card-footer">
                Vous n'avez pas de compte? <a asp-area="WebSite" asp-controller="HomePage" asp-action="Signup">Crééez votre compte personnel</a>
            </div>
        </div>
        <div class="login-card-social">
            <div>Autres options de connexion</div>
            <div class="login-card-social-btns">
                <a href="#">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-brand-facebook"
                         width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                         stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                        <path d="M7 10v4h3v7h4v-7h3l1 -4h-4v-2a1 1 0 0 1 1 -1h3v-4h-3a5 5 0 0 0 -5 5v2h-3"></path>
                    </svg>
                </a>
                <a href="#">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-brand-google" width="24"
                         height="24" viewBox="0 0 24 24" stroke-width="3" stroke="currentColor" fill="none"
                         stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                        <path d="M17.788 5.108a9 9 0 1 0 3.212 6.892h-8"></path>
                    </svg>
                </a>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>