@using SaaS.Domain.Work;
@model WorkSite

@{
    var canCloturedWorkSite = true;
    var canOpenWorkSite = true;
}

<div class="container">
    <div class="header">
        <h1 class="header-title">@Model.Name</h1>
        <a class="header-button delete" asp-area="application" asp-controller="worksite" asp-action="delete">
            Supprimer
        </a>
        @if (canCloturedWorkSite)
        {
            @if (Model.EndDate is null)
            {
                <a class="header-button close" href="/application/worksite/close?id=@Model.Id">
                    Clôturer
                </a>
            }
        }
        @if(canOpenWorkSite)
        {
            @if (Model.EndDate is not null)
            {
                <a class="header-button open" href="/application/worksite/open?id=@Model.Id">
                    Ouvrir
                </a>
            }
        }
    </div>

    <form method="post" asp-area="application" asp-controller="worksite" asp-action="update" class="form-floating">
        <div class="body">
            <input asp-for="Id" hidden />
            <input asp-for="IsEnable" hidden />
            <input asp-for="CreatorId" hidden />
            <div class="form-floating py-2 col-12">
                <input type="text" asp-for="Name" class="form-control" />
                <label asp-for="Name" class="ms-2"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input type="text" asp-for="Description" class="form-control" />
                <label asp-for="Description" class="ms-2"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input type="text" asp-for="Code" class="form-control" />
                <label asp-for="Code" class="ms-2"></label>
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input type="text" asp-for="Address" class="form-control" />
                <label asp-for="Address" class="ms-2"></label>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input type="datetime-local" asp-for="StartDate" class="form-control" />
                <label asp-for="StartDate" class="ms-2"></label>
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input type="text" asp-for="Comment" class="form-control" />
                <label asp-for="Comment" class="ms-2"></label>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
        </div>
        <div class="footer">
            <button type="submit" class="footer-button-valid" style="width: 150px;">Enregistrer</button>
            <a class="footer-button-cancel" asp-area="application" asp-controller="worksite" asp-action="index">
                Annuler
            </a>
        </div>
    </form>
</div>