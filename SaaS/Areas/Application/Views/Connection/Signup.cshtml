@model SignupViewModel

@{
    Layout = null;
    ViewData["Title"] = "Inscription";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/Signup.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,600,0,0" />
    <title>@ViewData["Title"]</title>
</head>

<body>
    <div class="login-card-container">
        <div class="login-card">
            <div class="login-card-logo">
                <a asp-area="WebSite" asp-controller="HomePage" asp-action="HomePage">
                    <img src="~/Logo_PIPL_Developpement.png" alt="PIPL Développement" />
                </a>
            </div>
            <div class="login-card-header">
                <h1>Inscription</h1>
                <div>Veuillez vous créer un compte personnel</div>
            </div>
            <form id="account" method="post" class="login-card-form" asp-area="Application" asp-controller="Connection" asp-action="Signup">
                <div asp-validation-summary="ModelOnly" class="login-card-validation" role="alert"></div>
                <div class="form-item">
                    <span class="form-item-icon material-symbols-rounded">mail</span>
                    <input type="text" asp-for="User.Firstname" placeholder="Prénom" autofocus required/>
                </div>
                <div class="form-item">
                    <span class="form-item-icon material-symbols-rounded">mail</span>
                    <input type="text" asp-for="User.Lastname" placeholder="Lastname" autofocus required />
                </div>
                <div class="form-item">
                    <span class="form-item-icon material-symbols-rounded">mail</span>
                    <input type="email" asp-for="User.Email" placeholder="Email" autofocus required />
                </div>
                <div class="form-item">
                    <span class="form-item-icon material-symbols-rounded">lock</span>
                    <input type="password" asp-for="Password" placeholder="Mot de passe" required/>
                </div>
                <div class="form-item">
                    <span class="form-item-icon material-symbols-rounded">lock</span>
                    <input type="password" asp-for="ConfirmPassword" placeholder="Confirmer" required />
                </div>
                <div class="form-floating py-2 col-12">
                    <select id="subsidiarySelect" name="subsidiaryId" asp-items="@Model.SubsidiaryList" class="form-select border-0 shadow">
                        <option disabled selected>--Sélectionner une filliale--</option>
                    </select>
                    <label class="ms-2"></label>
                    <span class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <select id="departmentSelect" name="departmentId" class="form-select border-0 shadow">
                        <option disabled selected>--Sélectionner un service--</option>
                    </select>
                    <label class="ms-2"></label>
                    <span class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <select id="jobSelect" name="jobId" asp-for="@Model.User.JobId" class="form-select border-0 shadow">
                        <option disabled selected>--Sélectionner un poste--</option>
                    </select>
                    <label asp-for="User.JobId" class="ms-2"></label>
                    <span asp-validation-for="User.JobId" class="text-danger"></span>
                </div>
                <button id="login-submit" type="submit">S'inscrire</button>
            </form>
            <div class="login-card-footer">
                Vous possédez déjà votre propre compte personnel? <a asp-area="application" asp-controller="connection" asp-action="login">Connectez vous !</a>
            </div>
        </div>
