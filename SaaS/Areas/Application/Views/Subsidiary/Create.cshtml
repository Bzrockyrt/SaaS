@using SaaS.Domain.Identity;
@model Subsidiary

<div class="container">
    <div class="header">
        <h1 class="header-title">Créer une filliale</h1>
    </div>

    <form method="post" asp-area="application" asp-controller="subsidiary" asp-action="create" class="form-floating">
        <div class="body">
            <input asp-for="Id" hidden />
            <div class="form-floating py-2 col-12">
                <input type="text" asp-for="Name" class="form-control" />
                <label asp-for="Name" class="ms-2"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input type="text" asp-for="Description" class="form-control" />
                <label asp-for="Description" class="ms-2"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input type="text" asp-for="Code" class="form-control" />
                <label asp-for="Code" class="ms-2"></label>
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
        </div>
        <div class="footer">
            <button type="submit" class="footer-button-valid" style="width: 150px;">Créer</button>
            <a class="footer-button-cancel" asp-area="application" asp-controller="subsidiary" asp-action="index">
                Annuler
            </a>
        </div>
    </form>
</div>