<div class="header">
    <h1 class="header-title">Fonctionnalités</h1>
    <a class="header-button" asp-area="SuperCompany" asp-controller="Functionnality" asp-action="Create">
        Créer une fonctionnalité
    </a>
</div>
<div class="container">
    @*Afficher l'ensemble des fonctionnalités dans un tableau 
      Il faut pouvoir ajouter une fonctionnalité et modifier ou supprimer une fonctionnalité sélectionnée
    *@
    <table id="tableFunctionnalities" class="table table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Code</th>
                <th>Description</th>
                <th>Créé Par</th>
                <th>Créé à</th>
                <th>Actif</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

@section Scripts{
    <script src="~/js/SuperCompany/Functionnality/Functionnality.js"></script>
}